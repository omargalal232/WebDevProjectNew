    <br>
    <form action="/flight/search" method="post">
        <input type="text" name="searchQuery" placeholder="Search flights">
        <button type="submit">Search</button>
      </form>
      <% if (flights.length > 0) { %>
        <% for (let i = 0; i < flights.length; i++) { %>
          <!-- Display flight information -->
          <div class="flight-box">
            <h3><%= flights[i].boarding %> - Flight <%= flights[i].flightnumber %></h3>
            <p>Duration: <%= flights[i].duration %> hours</p>
            <p>Price: <%= flights[i].price %> EGP</p>
            <p>Tickets Available: <%= flights[i].ticketsavailable %></p>
            <img src="<%= flights[i].image %>" alt="Flight Image">
            <a href="/flight/book/<%= flights[i]._id %>">Book Now</a>
          </div>
        <% } %>
      <% } else { %>
        <!-- Display "Flight not found" message -->
        <p>No flights found for "<%= searchQuery %>".</p>
      <% } %>

    
