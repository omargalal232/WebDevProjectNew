<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/dashboard.css" rel="stylesheet">
    <link href="css/admin_dashboard_nav.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/nav.css">

</head>
<header>
    <%- include("./partials/nav.ejs") %>
</header>

<body>


    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="admin_dashboard">
                                <span data-feather="home"></span> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_tours">
                                <span data-feather="file"></span> Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_hotel">
                                <span data-feather="users"></span> Hotels
                            </a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link" href="/admin_cruise">
                                <span data-feather="bar-chart-2"></span> Cruises
                            </a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_customers">
                                <span data-feather="users"></span> Customers
                            </a>

                        <li class="nav-item">
                            <a class="nav-link" href="/admin_homepage">
                                <span data-feather="users"></span> Cities
                            </a>
                        </li>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_addAdmin">
                                <span data-feather="users"></span> Add Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                <h2>Cities</h2>

                <table class="table">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tour Name</th>
                        <th Scope="col">Action</th>
                    </tr>
                    <% for (let i=0; i < City.length; i++) { %>.
                        <tr>
                            <th scope="row">
                                <%= i + 1 %>
                            </th>
                            <td>
                                <%= City[i].name %>
                            </td>
                            <td>
                                <%= City[i].description %>
                            </td>

                            <td>
                                <form action="/admin_homepage/delete/<%=City[i].id %>" method="POST"
                                    class="delete-form">
                                    <button type="submit" class="nav-link">delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </table>


                <h3>Add city to homepage</h3>
                <form action="/admin_homepage" method="post">
                    <div class="mb-3">
                        <label for="city_name" class="form-label">City Name:</label>
                        <input type="text" class="form-control" id="city_name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="city_description" class="form-label">Description:</label>
                        <input type="text" class="form-control" id="city_description" name="description" required>
                    </div>
                    <div class="mb-3">
                        <label for="city_description" class="form-label">Image:</label>
                        <input type="text" class="form-control" id="city_description" name="img" required>
                    </div>

                    <input type="submit" class="btn btn-primary" value="Add city">
                </form>
                <!-- End of Add city Form -->
            </main>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
            <script src="js/dashboard.js"></script>
</body>

</html>