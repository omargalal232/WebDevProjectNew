<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/dashboard.css" rel="stylesheet">
    <link href="css/admin_dashboard_nav.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/nav.css">

</head>
<header>
    <%- include("./partials/nav.ejs") %>
</header>

<body>
    <br><br>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="admin_dashboard">
                                <span data-feather="home"></span> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_tours">
                                <span data-feather="file"></span> Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_hotel">
                                <span data-feather="users"></span> Hotels
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_cruise">
                                <span data-feather="bar-chart-2"></span> Cruises
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_customers">
                                <span data-feather="users"></span> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_addAdmin">
                                <span data-feather="users"></span> Add Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">

                <h2>Tour</h2>
                <% if(cities.length> 0) { %>

                    <table class="table">


                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tour Name</th>
                            <th Scope="col">Action</th>
                        </tr>

                        <% cities.forEach(tour=> { %>

                            <!-- Add your tour data here -->
                            <tr>
                                <th scope="row">1</th>
                                <td>
                                    <%= tour.name %>
                                </td>
                                <td> <a class="nav-link" href="/edit/<%= tour.id %>" class="">edit</a>
                                </td>
                                <td>
                                    <form action="/remove/<%= tour.id %>" method="POST"
                                        class="delete-form">
                                        <button type="submit" class="nav-link">delete</button>
                                    </form>
                                </td>
                            </tr>

                            <%})%>
                    </table>

                    <%}%>
                        <br>
                        <!-- Separator between table and form -->
                        <hr>
                        <br>
                        <!-- Add Hotel Form -->
                        <h3>Add tour</h3>
                        <form action="/admin_tours" method="POST">
                            <div class="mb-3">
                                <label for="tour_name" class="form-label">Tour Name:</label>
                                <input type="text" class="form-control" id="tour_name" name="name" required>
                            </div>
                
                            <div class="mb-3">
                                <label for="tour_image" class="form-label">Upload tour Image / Enter Url:</label>
                                <input type="text" class="form-control" id="tour_image" name="price"
                                    accept="image/*" required>
                            </div>
                            <input type="submit" class="btn btn-primary" value="Add tour">
                        </form>
                        <!-- End of Add Hotel Form -->

            </main>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="js/dashboard.js"></script>
</body>

</html>