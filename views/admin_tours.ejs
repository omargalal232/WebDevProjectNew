    <link rel="stylesheet" href="/css/nav.css">

</head>
<header>
<%- include("./partials/nav.ejs") %>
</header>
<body>
    <br><br>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="admin_dashboard">
                                <span data-feather="home"></span> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_tours">
                                <span data-feather="file"></span> Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_customers">
                                <span data-feather="users"></span> Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_reports">
                                <span data-feather="bar-chart-2"></span> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin_addAdmin">
                                <span data-feather="users"></span> Add Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <h2>Tours</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tour Name</th>
                            <th scope="col">Location</th>
                            <th scope="col">Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Add your tour data here -->
                        <tr>
                            <th scope="row">1</th>
                            <td>Example Tour 1</td>
                            <td>Location 1</td>
                            <td>3 days</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Example Tour 2</td>
                            <td>Location 2</td>
                            <td>5 days</td>
                        </tr>
                    </tbody>
                </table>
                <!-- Add your content here -->
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
